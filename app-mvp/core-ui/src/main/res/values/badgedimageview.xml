        <attr name="bubbble_badgeGravity">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
            <flag name="start" value="0x00800003" />
            <flag name="end" value="0x00800005" />
        </attr>
        <attr name="badgePadding" format="dimension|reference"/>
        <attr name="badgePaddingX" format="dimension|reference"/>
        <attr name="badgePaddingY" format="dimension|reference"/>
        <attr name="badgeText" format="string"/>
        <attr name="badgeColor" format="color"/>
    </declare-styleable>
</resources>