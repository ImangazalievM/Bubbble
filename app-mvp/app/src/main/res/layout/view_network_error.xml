<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/dribbble_lined_logo_pink_100dp"/>

    <TextView
        android:textAppearance="@style/AppTheme.DefaultTextTheme"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/check_network_message"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/retry_button"
        android:theme="@style/AppTheme.SpecialMaterialButton"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/try_again_message"/>

</LinearLayout>